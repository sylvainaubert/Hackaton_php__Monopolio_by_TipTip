{% extends 'base.html.twig' %}

{% block title %}Gestion des remboursements{% endblock %}

{% block body %}

    <nav class="navbar navbar-light bg-light justify-content-center">
        <a class="navbar-brand" href="{{ path('refund_index') }}"><img src="{{ asset('build/logo.png') }}"
                                                                       alt="logo-tip-tip" width="150" height="75"></a>
    </nav>

    <h1 class="text-center">Gestion des remboursements</h1>
    <br>
    <br>
    <br>
    <div class="text-center">
        <a type="button" class="btn btn-primary" href="{{ path('refund_new') }}">Ajouter une prise en charge
        </a>
    </div>
    <br>
    <br>
    <br>
    <div class="container-fluid">
        <table class="table table-hover">
            <thead>
            <tr>

                <th>Soins</th>
                <th>Prix sécurité sociale</th>
                <th>Taux sécurité sociale</th>
                <th>Taux TipTip</th>
                <th>PEC sécurité sociale</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for refund in refunds %}
                <tr>
                    <td>{{ refund.benefit }}</td>
                    <td>{{ refund.regulatedPrice }}</td>
                    <td>{{ refund.refundRate }}</td>
                    <td>{{ refund.RefundRateTipTip }}</td>
                    <td>{{ refund.secuSupported ? 'Yes' : 'No' }}</td>
                    <td>
                        <a type="button" class="btn btn-secondary" href="{{ path('refund_show', {'id': refund.id}) }}">voir</a>
                        <a type="button" class="btn btn-success" href="{{ path('refund_edit', {'id': refund.id}) }}">modifier</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
